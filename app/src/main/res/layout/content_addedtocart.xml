<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/browser_actions_bg_grey"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/addimage"
                android:layout_width="140dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/deletecart"
                android:layout_width="40dp"
                android:background="@color/white"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                 android:src="@drawable/ic_baseline_delete_24"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/addimage"
                android:layout_marginStart="150dp"
                android:layout_marginBottom="80dp"
               android:layout_alignParentBottom="true"
                  >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addname"
                        android:layout_width="wrap_content"


                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/addrating"
                        android:layout_width="wrap_content"


                        android:layout_height="wrap_content"
                        android:text="rating"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/addprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="63dp"
                android:layout_marginBottom="102dp"
                android:text="Rs."
                android:textColor="@color/green"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="0dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="25dp"

    >
    <ImageButton
        android:id="@+id/addplus"
        android:src="@drawable/ic_icons8_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/addnumber"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="no"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"

        />
    <ImageButton
        android:src="@drawable/ic_iconfinder_211864_minus_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/cardview_light_background"
        android:id="@+id/addminus"
        />




</LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>